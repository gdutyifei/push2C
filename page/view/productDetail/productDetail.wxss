.header image {
  width: 100%;
  vertical-align: bottom;
  /* position: relative; */
}

.product-info {
  /* position: absolute;
  bottom: 0; */
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #FFF;
  display: flex;
  margin-bottom: 2.4%;
}
.product-name {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #404040;
  margin-left: 4%;
  width: 50%;
  text-align: left;
}

.product-price {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  color: #404040;
  width: 50%;
  margin-right: 4%;
  text-align: right;
}

.product-detail {
  text-align: center;
  background-color: #FFF;
  margin-bottom: 100rpx;
}

.detail-top {
  font-size: 48rpx;
  font-family: PingFangSC-Semibold;
  color: #404040;
  padding: 2.4% 0;
}

.detail-bottom {
  margin: 0 4%;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  color: #111111;
  padding-bottom: 2.4%;
  text-align: left;
}

.bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  text-align: center;
}

.consult-btn {
  width: 66.7%;
  background-color: #FFF;
  color: #09BB07;
}

.share-btn {
  width: 33.3%;
  background-color: #09BB07;
  color: #FFF;
}

.consult-content {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
}

.consult-form {
  display: inline-block;
  vertical-align: middle;
  transform: translateY(-50%);
  margin: 50vh auto 0;
  background-color: #FFF;
  width: 560rpx;
  border-radius: 8rpx;
}

.consult-top {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  color: #404040;
  padding: 2.2% 0;
}

.form-data input {
  border: 2rpx solid #E3E7EE;
  width: 440rpx;
  height: 70rpx;
  border-radius: 4rpx;
  margin: 20rpx auto;
  text-align: left !important;
  padding: 0 30rpx;
}

.submit-btn button {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #02BB00;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #FFF;
  border-top: 1rpx solid #D2D3D5;
}

button {
  background: none;
  border-radius: 0;
}
button::after{ border: none; }