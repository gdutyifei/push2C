/* page/view/myStore/myStore.wxss */
.pic-content {
  width: 100%;
}
.main-pic {
  width: 100%;
}

.title {
  font-size: 36rpx;
  color: #888888;
  font-family: PingFangSC-Medium;
  margin: 30rpx 0 30rpx 30rpx;
}
.user-content {
  background-color: #FFF;
  /* width: 100%; */
  padding: 0 15rpx;
}
.user {
  display: inline-block;
  width: 330rpx;
  padding: 0 15rpx;
}
.user-pic {
  display: inline-block;
  position: relative;
  width: 330rpx;
  height: 441rpx;
}

.user-info {
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  width: 100%;
  height: 131rpx;
  color: #FFF;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.user-name {
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  padding-left: 30rpx;
}
.user-post {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  padding-left: 30rpx;
}

.contact {
  
  width: 100%;
}

.tel {
  background-color: #FFF;
  color: #02BB00;
  font-size: 64rpx;
  font-family: HelveticaNeue;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 160rpx;
}

.tel text {
  padding: 6rpx 18%;  
  border: 2px solid #E3E7EE;
  height: 100rpx;
  line-height: 100rpx;
}

.chat {
  position: fixed;
  bottom: 130rpx;
  right: 30rpx;
}

.chat image {
  width: 130rpx;
}

.map_container{
    /* height: 450px; */
    width: 100%;
}

.map {
    /* height: 100%; */
    width: 100%;
}