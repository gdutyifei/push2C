/* page/view/myProduct/myProduct.wxss */
.product-image {
  width: 100%;
  position: relative;
}
.product-info {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  /* margin-bottom: 3%; */
}
.product-name {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: #F7F7FA;
  margin-left: 4%;
  width: 50%;
  text-align: left;
}

.product-price {
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  color: #F7F7FA;
  width: 50%;
  margin-right: 4%;
  text-align: right;
}

.chat {
  position: fixed;
  bottom: 130rpx;
  right: 30rpx;
}

.chat image {
  width: 130rpx;
}